  <script>
    // Glow "play" effect â€” aumenta la luce quando il video parte
    document.querySelectorAll('.video-box video').forEach(v => {
      const box = v.closest('.video-box');
      const onPlay = () => box.classList.add('playing');
      const onPause = () => box.classList.remove('playing');
      v.addEventListener('play', onPlay);
      v.addEventListener('pause', onPause);
      v.addEventListener('ended', onPause);
      if (!v.paused) onPlay();
    });
  </script>

